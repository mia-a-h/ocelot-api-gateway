{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7130"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/auth/register",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/register",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 6001
        }
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 5
      }
    },
    {
      "UpstreamPathTemplate": "/auth/token",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/token",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 6001
        }
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 10
      }
    },
    {
      "UpstreamPathTemplate": "/auth/refresh",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/refresh",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 6001
        }
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10m",
        "PeriodTimespan": 600,
        "Limit": 5
      }
    },
    {
      "UpstreamPathTemplate": "/login",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/back/login",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 6005
        }
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 10
      }
    },
    {
      "UpstreamPathTemplate": "/protected",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/back/protected",
      "DownstreamScheme": "https",
      "DownstreamHeaderTransform": {
        "Authorization": "LeaveAsIs"
      },
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 6005 //7186
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "Issuer": "https://localhost:6001",
        "Audience": "https://localhost:6005",
        "AllowedScopes": []
      }
    },
    {
      "UpstreamPathTemplate": "/connect/token",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/connect/token",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 6001
        }
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1m",
        "PeriodTimespan": 60,
        "Limit": 10
      }
    },
    {
      "UpstreamPathTemplate": "/meow",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/meow",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 6001
        }
      ]
    }

  ],
  "SwaggerEndPoints": [
    {
      "Key": "Auth",
      "Config": [
        {
          "Name": "Auth API",
          "Url": "https://localhost:6001/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "Back",
      "Config": [
        {
          "Name": "Back API",
          "Url": "https://localhost:6005/swagger/v1/swagger.json"
        }
      ]
    }
  ]
}
